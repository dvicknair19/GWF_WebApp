PORT=3001
NODE_ENV=development

# Anthropic Claude API
CLAUDE_API_KEY=sk-ant-your-key-here

# Perplexity API (for research and news)
PERPLEXITY_API_KEY=pplx-your-key-here

# Tavily API (legacy - being replaced by Perplexity)
TAVILY_API_KEY=tvly-your-key-here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# CORS - set to your Railway frontend URL in production
# Local dev: http://localhost:5173
# Production: https://your-backend.railway.app (Railway serves frontend from backend)
CORS_ORIGIN=http://localhost:5173

# Python microservice URL
# Local dev: http://localhost:5050
# Production (Railway internal network): http://python-microservice.railway.internal:5050
PYTHON_SERVICE_URL=http://localhost:5050
